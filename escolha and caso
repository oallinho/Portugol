programa {
  funcao inicio() {
    inteiro op, op2, n1, n2, n3, idade

    escreva("--Menu-- \n")
    escreva("1 para realizar cálculo \n")
    escreva("2 para verificar idade \n \n")
  
    escreva("Digite a opção: ")
    leia(op)
limpa()

    escolha(op){
      caso 1:
      escreva("Digite o primeiro número: ")
      leia(n1)
      limpa()

      escreva("Digite o segundo número: ")
      leia(n2)
      limpa()

      escreva("1 para somar \n")
      escreva("2 para subtrair \n")
      escreva("Qual operação gostaria de realizar? ")
      leia(op2)
      limpa()

    escolha(op2){
      caso 1:
        escreva("A soma dos dígitos é: ", n1 + n2)
        pare
      
      caso 2:
        escreva("A subtração dos dígitos é: ", n1 - n2)
        pare

      caso contrario:
        escreva("Opção inválida")
        pare
        limpa()
    }
    pare

      caso 2:
        escreva("Digite a sua idade: ")
        leia(idade)
        limpa()

        se(idade >= 18){
          escreva("Você é maior de idade.")
        }senao{
          escreva("Você é menor de idade")
        }
        pare
        
      caso contrario:
        escreva("Opção inválida.")
    }


    
  }
}

